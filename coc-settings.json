{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "args": ["--background-index"],
            "trace.server": "verbose",
            "rootPatterns": ["compile_commands.json", ".git/", ".theos/"],
            "filetypes": ["c", "cpp", "objc", "objcpp"]
        }
    }
}
